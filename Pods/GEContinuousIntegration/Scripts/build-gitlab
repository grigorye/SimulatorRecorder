#! /bin/sh -x

set -eu -o pipefail

pkg="${1:?}"; shift
log="${1:?}"; shift

dn=$(dirname "$0")
bn=$(basename "$0")

bundle install
bundle exec pod repo update
bundle exec pod install

"$dn"/build-pkg \
    "${pkg:?}" \
    ${DEVELOPER_DIR:+DEVELOPER_DIR="${DEVELOPER_DIR}"} \
    "${@}" \
    | tee "${log:?}" \
    | "$dn"/xcpretty
